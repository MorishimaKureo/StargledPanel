<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Manager - <%= serverName %></title>
    <link rel="stylesheet" href="/css/sidebar.css">
    <link rel="stylesheet" href="/css/file-manager.css">
</head>
<body>
    <%- include('partials/consoleSidebar') %>
    <div class="container">
        <div class="header">
            <h1>File Manager: <%= serverName %></h1>
            <div class="search-bar">
                <input type="text" placeholder="Search">
            </div>
        </div>

        <div class="file-navigation">
            <% if (relativePath) { %>
                <a href="/server/<%= serverName %>/files/<%= relativePath.split('/').slice(0, -1).join('/') %>" class="back-btn">üîô Back</a>
            <% } else { %>
                <a href="/server/<%= serverName %>" class="back-btn">üîô Back to Console</a>
            <% } %>
            <div class="upload-section">
                <form action="/server/<%= serverName %>/upload/<%= relativePath %>" method="POST" enctype="multipart/form-data">
                    <input type="file" name="file">
                    <button type="submit" class="upload-btn">Upload</button>
                </form>
            </div>
        </div>

        <div class="file-list">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Size</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% fileList.forEach(file => { %>
                        <% if (file.name !== 'serverId.txt') { %>
                            <tr>
                                <td>
                                    <% if (file.isDirectory) { %>
                                        üìÅ <a href="/server/<%= serverName %>/files/<%= relativePath ? relativePath + '/' : '' %><%= file.name %>"><%= file.name %></a>
                                    <% } else { %>
                                        üìÑ <a href="/server/<%= serverName %>/edit/<%= relativePath ? relativePath + '/' : '' %><%= file.name %>"><%= file.name %></a>
                                    <% } %>
                                </td>
                                <td><%= file.size %></td>
                                <td><%= file.date %></td>
                                <td>
                                    <form action="/server/<%= serverName %>/delete" method="POST" class="inline-form">
                                        <input type="hidden" name="fileName" value="<%= file.name %>">
                                        <input type="hidden" name="folderPath" value="<%= relativePath %>">
                                        <input type="hidden" name="isDirectory" value="<%= file.isDirectory %>">
                                        <button type="submit" class="delete-btn">üóë Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% } %>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
