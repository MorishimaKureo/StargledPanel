<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Servers</title>
</head>
<body>
    <h1>Manage Servers</h1>
    <%- include('partials/adminSidebar') %>
    <div class="content">
        <a href="/admin/create-server" style="display: inline-block; margin-bottom: 10px; padding: 8px 12px; background-color: green; color: white; text-decoration: none; border-radius: 4px;">Create Server</a>
        <h2>Server List</h2>
        <% if (servers.length === 0) { %>
            <p>No servers available.</p>
        <% } else { %>
            <ul>
                <% servers.forEach(server => { %>
                    <li>
                        <%= server %>
                        <form action="/admin/manage-servers/delete-server" method="POST" style="display:inline;">
                            <input type="hidden" name="serverName" value="<%= server %>">
                            <button type="submit">Delete</button>
                        </form>
                    </li>
                <% }); %>
            </ul>
        <% } %>
    </div>
</body>
</html>
